                        <img src="https://unsplash.it/600.jpg?image=250" class="img-fluid small-img-comp">
                      </a>
                      <br>
                      <small class="text-xs">click image to enlarge</small>
                    </div>
                    {{#if resumeSimple}}
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="resume[style]" id="inlineRadio1" value="simple" checked>
                      <label class="form-check-label" for="inlineRadio1">Simple & Clean</label>
                    </div>
                    {{else}}
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="resume[style]" id="inlineRadio1" value="simple">
                      <label class="form-check-label" for="inlineRadio1">Simple & Clean</label>
                    </div>
                    {{/if}}
