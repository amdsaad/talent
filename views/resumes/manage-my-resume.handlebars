<div class="container-fluid pt-3" id="resumes">
  <div class="row ">
    <div class="col-md-3">
      <ul class="list-group  p-2" id="edit-resume">
        <li class="list-group-item mb-3 mt-3 text-white bg-op-7 bg-grey-dark p-2 rounded">
          {{#if published}}
          <p>Your resume is
            <span class="text-warning">Published</span>
          </p>
          <form method="post" action="/candidate-resume/{{resume.id}}" class="published-resume-form ">
            <input type="hidden" name="resume[published]" value="false">
            <input type="submit" value="Un-Publish" class="btn btn-primary" />
          </form>
          {{else}}
          <p>Your resume is not yet
            <span class="text-warning">Published</span> , please published your resume once it is complated</p>
          <form method="post" action="/candidate-resume/{{resume.id}}" class="published-resume-form ">
            <input type="hidden" name="resume[published]" value="true">
            <input type="submit" value="Publish" class="btn btn-primary" />
          </form>
          {{/if}}
        </li>
        <li class="list-group-item mt-1 text-white bg-op-7 bg-grey-dark p-2 rounded text-center">
          <h5 class="text-left p-3">Change Resume Style</h5>
          <form method="post" action="/candidate-resume/{{resume.id}}" class="style-resume-form">
            <div class="form-group">
              <div>
                <a href="https://unsplash.it/1200/768.jpg?image=250" data-toggle="lightbox" data-title="A random title" data-footer="A custom footer text">
                  <img src="https://unsplash.it/600.jpg?image=250" class="img-fluid">
                </a>
              </div>
              {{#if resumeDefualt}}
              <input id="disabledInput" type="" value="Current Style" class="btn btn-warning" disabled/> {{else}}
              <input type="hidden" name="resume[style]" value="default">
              <input type="submit" value="Select" class="btn btn-primary" /> {{/if}}
            </div>
            <div class="form-group">
              <div>
                <a href="https://unsplash.it/1200/768.jpg?image=20" data-toggle="lightbox" data-title="A random title" data-footer="A custom footer text">
