<div class="container-fluid  bg-blue-dark bg-op-8">
  <div class="container">
    <div class="row justify-content-center collapse" id="template">
      <div id="edit-resume-template">
        <div class="col-md-10">
          <form action="/candidate-resume/{{resume.id}}" method="post" class="style-resume-form py-5" enctype="multipart/form-data">
            <div class="form-group row">
              <div class="col-md-12">
                <div class="row justify-content-center text-center">
                  <div class="col-md-6">
                    <div>
