                        <div class="col-md-4">
                          <input type="text" class="form-control border-op-8 border-grey" placeholder="Job Title" name="title" required />
                        </div>
                        <div class="col-md-4">
                          <input type="text" class="form-control border-op-8 border-grey" placeholder="Company" name="company" required />
                        </div>
                        <div class="col-md-4">
                          <input type="text" class="form-control border-op-8 border-grey" placeholder="Location" name="location" />
                        </div>
                      </div>
                      <div class="form-group row">
                        <div class="col-md-5">
                          <h6>From Date</h6>
                          <input type="date" class="form-control border-op-8 border-grey" name="from" />
                        </div>
                        <div class="col-md-7">
                          <h6>To Date</h6>
                          <div class="row">
                            <div class="col-md-7 to-date-exp">
                              <input type="date" class="form-control border-op-8 border-grey" name="to" />
                            </div>
                            <div class="col-md-5 ">
