                      <input class="form-check-input" type="radio" name="resume[style]" id="inlineRadio1" value="default" checked>
                      <label class="form-check-label" for="inlineRadio1" >Default</label>
                    </div>
                    {{else}}
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="resume[style]" id="inlineRadio1" value="default">
                      <label class="form-check-label" for="inlineRadio1">Default</label>
                    </div>
                    {{/if}}
                  </div>
                  <div class="col-md-6">
                    <div>
                      <a href="https://unsplash.it/1200/768.jpg?image=250" data-toggle="lightbox" data-title="A random title"
