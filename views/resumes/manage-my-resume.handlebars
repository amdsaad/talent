<div class="container-fluid pt-3" id="resumes">
  <div class="row justify-content-center">
    <div class="col-md-8" id="resume-lists">
      <div class="row">
        <div class="col-md-12">
          <div id="resume-messages" style="position: relative;float: right;"></div>
        </div>
      </div>
      {{#if resumeDefualt}}
      <div class="row bg-grey ">
        <div class="col-md-4 col-lg-3" id="resume-side">
          <div class="d-flex rounded-top">
            <img class="rounded-top" src="{{resume.picture}}" alt="">
          </div>
          <div class="resume-title ">
            <div class="top-line"></div>
            <div class="p-1 bg-blue-dark text-white text-center rounded-bottom">
              <h4 class="display-4" id="candidate-name">{{resume.fullName}}</h4>
              <h6 class="display-4" id="candidate-jobTitle">{{resume.jobTitle}}</h6>
            </div>
          </div>
          <br> {{!-- Skills Start --}}
          <div class="row no-gutters d-none d-md-flex d-lg-flex">
            <div class="col-3 col-sm-3 col-md-3 col-lg-3">
              <div class="bg-green-bright text-center" id="rounded2">
                <i class="fas fa-cogs icon-2x pt-4 pb-4"></i>
              </div>
            </div>
            <div class="col-9 col-sm-9 col-md-9 col-lg-9">
              <div class="bg-blue-dark text-center" id="rounded">
                <h5 class="display-4 text-white p-2" id="resume-profile">Skills</h5>
              </div>
            </div>
            {{#each resume.skills}}
            <span class="badge badge-success p-2 ml-2 mt-3">
              <h5></h5>{{this}}</span>
            {{/each}}
          </div>
          {{!-- Skills End --}}
        </div>
        <div class="col-md-8 col-lg-9">
          {{!-- Profile Start --}}
          <div class="row no-gutters">
            <div class="col-2 col-sm-2 col-md-2 col-lg-1">
              <div class="bg-green-bright text-center" id="rounded2">
                <i class="far fa-user icon-2x p-2"></i>
              </div>
            </div>
            <div class="col-10 col-sm-10 col-md-10 col-lg-11">
              <div class="bg-blue-dark text-center" id="rounded">
                <h5 class="display-4 text-white p-2" id="resume-profile">Profile</h5>
              </div>
            </div>
            <div class="text-grey-dark">
              <p>{{resume.bio}}</p>
            </div>
          </div>
          {{!-- Profile End --}} {{!-- Start of Experience --}}
          <div class="row no-gutters">
            <div class="col-2 col-sm-2 col-md-2 col-lg-1">
              <div class="bg-green-bright text-center exp-icon" id="rounded2">
                <i class="fas fa-briefcase icon-2x p-2"></i>
              </div>
            </div>
            <div class="col-10 col-sm-10 col-md-10 col-lg-11">
