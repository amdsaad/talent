<div class="container">
  <h1 class="display-4 text-center">
    Edit Your Experience</h1>
  <small class="d-block p-3">* = required field</small>
  <div class="p-3">
    <form action="/candidate-resume/experience/{{experiance.id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-group">
        <input type="text" class="form-control form-control-lg" value="{{experiance.title}}" name="title" />
      </div>
      <div class="form-check mb-4">
        <input class="form-check-input" type="checkbox" name="current" value="Till Now" id="current" />
        <label class="form-check-label" for="current">
          Current Job
        </label>
      </div>
      <div class="form-group">
        <input type="text" class="form-control form-control-lg" value="{{experiance.company}}" name="company" required/>
      </div>
      <div class="form-group">
        <input type="text" class="form-control form-control-lg" value="{{experiance.location}}" name="location" required />
      </div>
      <h6>From Date</h6>
      <div class="form-group">
        <input type="date" class="form-control form-control-lg" value="{{experiance.from}}" name="from" required/>
      </div>
      <div class="to-date">
        <h6>To Date</h6>
        <div class="form-group ">
          <input type="date" class="form-control form-control-lg to-date" name="to" />
        </div>
      </div>
      <div class="form-group">
        <textarea id="editor"class="form-control form-control-lg" name="description">{{experiance.description}}</textarea>
        <small class="form-text text-muted">Some of your responsabilities, etc</small>
      </div>
      <input type="submit" class="btn btn-primary btn-block mt-4" />
    </form>
  </div>
</div>