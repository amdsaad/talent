{{> _headerDark}}
<div class="container-fluid bg-light no-page-header" style="min-height: 100vh;">
  <div class="container">
    <div class="row">
      <div class="p-5 ">

      </div>
    </div>
    <div class="row">
      {{#each resumes}}
      <div class="col-md-3">
        <div class="card shadow">
          <div class="card-body">
            <img class="rounded-circle mx-auto d-block mb-2" src="{{this.pictureUrl}}" alt="{{this.fullName}} image"
              style="width:100px; height: 100px;">
            <h4 class="card-title text-muted text-capitalize text-center"><a class="text-muted" href="/candidate-resume/{{this.handle}}">{{this.fullName}}</a></h4>
            <h6 class="card-title text-primary text-capitalize text-center">{{this.jobTitle}}</h6>
            <p class="text-muted text-sm">{{{stripTags (truncate bio 100)}}}</p>
            {{#if this.skills}}
            <hr class="w-100 mt-1 mb-1">
            <div class="">
              {{#each this.skills}}
              <span class="d-inline-block"><span class="badge badge-warning text-capitalize">{{this.name}}</span></span>
              {{/each}}
            </div>
            {{/if}}
            {{#if this.languages}}
            <hr class="w-100 mt-1 mb-1">
            <div class="">
              {{#each this.languages}}
              <span class="d-inline-block"><span class="badge badge-info text-capitalize">{{this.name}}</span></span>
              {{/each}}
            </div>
            {{/if}}
              <a class="float-right text-sm text-lime" href="/candidate-resume/{{this.handle}}"><i class="fas fa-eye icon-1x"></i></a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>