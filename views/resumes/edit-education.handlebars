<div class="container mt-4">
  <h4 class="text-center">Edit Your Education</h4>
  <div class="p-3">
    <form action="/candidate-resume/education/{{education.id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-group">
        <input type="text" class="form-control form-control-rounded" name="school" value="{{education.school}}" required />
      </div>
      <div class="form-check mb-4 mr-sm-4 mb-sm-2">
        <input class="form-check-input" type="checkbox" name="current" value="Till Now" id="current" />
        <label class="form-check-label" for="current">
          Current School
        </label>
      </div>
      <div class="form-group">
        <input type="text" class="form-control form-control-rounded" value="{{education.degree}}" name="degree" required />
      </div>
      <div class="form-group">
        <input type="text" class="form-control form-control-rounded" value="{{education.fieldofstudy}}"  name="fieldofstudy" required />
      </div>
      <div class="form-group">
        <input type="text" class="form-control form-control-rounded" value="{{education.location}}" name="location" />
      </div>
      <h6>From Date</h6>
      <div class="form-group">
        <input type="date" class="form-control form-control-rounded" name="from" />
      </div>
      <div class="to-date">
        <h6>To Date</h6>
        <div class="form-group">
          <input type="date" class="form-control form-control-rounded to-date" name="to" />
        </div>
      </div>
      <div class="form-group">
        <textarea id="editor" class="form-control form-control-rounded" name="description">{{education.description}}</textarea>
        <small class="form-text text-muted">Tell us about your study!</small>
      </div>
      <input type="submit" class="btn btn-info btn-block mt-4" />
    </form>
  </div>
</div>