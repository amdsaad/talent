{{> _headerDark}}
<div class="no-page-header d-print-none"></div>
{{#if employer}}
<div class="container">
  <div id="save-resume">
    <form action="candidate-resume/{{resumes.handle}}/save-resume" method="post" class="save-resume-form d-print-none">
      <button type="submit" id="saveResume" class="fabutton-resume-list">
