{{> _headerDark}}
<div class="container-fluid py-5 bg-success bg-op-5 no-page-header">
  <div class="row justify-content-md-center">
    <h1 class="text-capitalize">add new resume</h1>
  </div>
</div>
<div class="container" style="min-height: 100vh">
  <div class="row justify-content-md-center ">
    <div class="col-md-8  bg-light" style="min-height: 100vh">
      <form action="/candidate-resume" method="post" class="py-5">
        <div class="form-group row">
          <div class="col-sm-3">
            <h6>Category / Specialism</h6>
          </div>
          <div class="col-sm-9">
            <select class="custom-select d-block border-op-1 border-light bg-primary bg-op-5" name="specialisms" required>
              <option value="hospitality and restaurants" selected>Hospitality & Restaurants</option>
              <option value="travel and tourism">Travel & Tourism</option>
              <option value="sales">Sales</option>
              <option value="secretarial‬">Secretarial‬</option>
              <option value="customer service">Customer Service</option>
              <option value="accounting">Accounting</option>
              <option value="Airlines and Aviation">Airlines & Aviation</option>
              <option value="architecture interior design">Architecture & Interior Design</option>
              <option value="art entertainment">Art & Entertainment</option>
              <option value="banking finance">Banking & Finance</option>
              <option value="business development">Business Development</option>
              <option value="engineering">Engineering</option>
              <option value="hr recruitment">HR & Recruitment</option>
              <option value="legal services">Legal Services</option>
              <option value="logistics distribution">Logistics & Distribution</option>
              <option value="marketing advertising">Marketing & Advertising</option>
              <option value="Media">Media</option>
              <option value="public relations">Public Relations</option>
              <option value="medical healthcare">Medical & Healthcare</option>
              <option value="oil gas energy">Oil, Gas & Energy</option>
              <option value="real estate">Real Estate</option>
              <option value="safety and security‬">Safety & Security</option>
              <option value="transportation">Transportation</option>
            </select>
          </div>
        </div>
        <div class="form-group row py-5">
          <div class="col-sm-3">
            <h6>Style / Template</h6>
          </div>
          <div class="col-sm-9">
            <div class="row justify-content-center text-center">
              <div class="col-md-6">
                <div>
                  <a href="https://unsplash.it/1200/768.jpg?image=250" data-toggle="lightbox" data-title="A random title" data-footer="A custom footer text">
                    <img src="https://unsplash.it/600.jpg?image=250" class="img-fluid small-img-comp">
                  </a>
                  <br>
                  <small class="text-xs">click image to enlarge</small>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="style" id="inlineRadio1" value="default">
                  <label class="form-check-label" for="inlineRadio1">Default</label>
                </div>
              </div>
              <div class="col-md-6">
                <div>
                  <a href="https://unsplash.it/1200/768.jpg?image=250" data-toggle="lightbox" data-title="A random title" data-footer="A custom footer text">
                    <img src="https://unsplash.it/600.jpg?image=250" class="img-fluid small-img-comp">
                  </a>
                  <br>
                  <small class="text-xs">click image to enlarge</small>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="style" id="inlineRadio1" value="simple">
                  <label class="form-check-label" for="inlineRadio1">Simple & Clean</label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group ">
          <input type="hidden" name="fullName" type="text" class="form-control" value="{{user.name}}">
        </div>
        <div class="form-group ">
          <input type="hidden" name="email" type="text" class="form-control" value="{{user.email}}">
        </div>
        <div class="form-group row justify-content-center">
          <div class="col-sm-3">
            <h6>Status</h6>
          </div>
          <div class="col-sm-9">
            <select class="custom-select d-block border-op-1 border-light bg-primary bg-op-5" name="status" required>
              <option value="public" selected>Public</option>
              <option value="private">Private</option>
            </select>
            <small class="text-xs">Choose private if you wish your resume to be visibale to employers only
              <br>public will be seen by everyone</small>
          </div>
        </div>
        <div class="form-group row py-3">
          <div class="col-sm-3">

          </div>
          <div class="col-sm-9">
            <input type="submit" value="Start" class="btn btn-primary btn-lg rounded">
          </div>
        </div>
      </form>
    </div>
    <div class="col-md-4">
      <img class="mt-3" src="/img/ad1.jpg" alt="" style="width: 200px;">
      <img class="mt-3" src="/img/ad1.jpg" alt="" style="width: 200px;">
    </div>
  </div>
</div>