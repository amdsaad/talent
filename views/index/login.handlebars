{{> _headerDark}}
<div class="container-fluid  bg-light" style="min-height:100vh">
  <div class="container no-page-header">
    <div class="text-center">
      <div class="py-5">
      </div>
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <div class="mt-4 mb-4">
            <h5 class="text-muted">Login to Your TalentLiken Account</h5>
          </div>
          <ul class="nav nav-steps flex-column flex-lg-row justify-content-lg-around p-2">
            <li class="nav-item">
              <a href="#tab-steps1" class="nav-link active" data-toggle="tab">
                <span class="font-weight-bold d-block">Candidate</span> </a>
            </li>
            <li class="nav-item">
              <a href="#tab-steps2" class="nav-link" data-toggle="tab">
                <span class="font-weight-bold d-block">Employer</span> </a>
            </li>
          </ul>
          <div class="tab-content text-center px-2">
            <div class="tab-pane fade show active" id="tab-steps1">
              <form method="post" action="/auth/candidate/login">
                <div class="input-group  text-left mb-3">
                  <div class="input-group-prepend"> <span class="input-group-text" id="inputGroup-sizing-default"><i
                        class="fas fa-at"></i></span>
                  </div>
                  <input type="email" name="email" class="form-control" placeholder="email" required>
                </div>
                <div class="input-group  text-left mb-3">
                  <div class="input-group-prepend"> <span class="input-group-text" id="inputGroup-sizing-default"><i
                        class="fas fa-key"></i></span>
                  </div>
                  <input type="password" name="password" class="form-control" placeholder="password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
              </form>
              <div class="mt-3">
                <p class=""><a class="text-blue" href="/auth/forgot">Forgot your password ?</a> </p>
              </div>
              <hr class="w-100">
              <a style="font-size:14px;" href="/auth/google" type="button" class=" mt-1 text-center mb-1 text-white btn bg-brand-google-plus text-capitalize w-100"><span
                  class="text-white"><i class="fab fa-google fa-baseline"></i></span>
                Continue with Google</a>
              <hr class="w-100">
              <div class="mt-3">
                <div class="p-3 mb-3 bg-light w-100">
                  Don't have an account?<a href="/auth/candidate/register"><strong> Sign up</strong></a>
                </div>
                <small class="text-xs">By signing up, you agree to our Terms of Use and Privacy Policy.</small>
              </div>
            </div>
            <div class="tab-pane fade" id="tab-steps2">
              <form method="post" action="/auth/employers/login">
                <div class="input-group  text-left mb-3">
                  <div class="input-group-prepend"> <span class="input-group-text" id="inputGroup-sizing-default"><i
                        class="fas fa-at"></i></span>
                  </div>
                  <input type="email" name="email" class="form-control" placeholder="email" required>
                </div>
                <div class="input-group  text-left mb-3">
                  <div class="input-group-prepend"> <span class="input-group-text" id="inputGroup-sizing-default"><i
                        class="fas fa-key"></i></span>
                  </div>
                  <input type="password" name="password" class="form-control" placeholder="password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
              </form>
              <div class="mt-3">
                <p class=""><a class="text-blue" href="/auth/forgot">Forgot your password ?</a> </p>
              </div>
              <hr class="w-100">
              <div class="mt-3">
                <div class="p-3 mb-3 bg-light w-100">
                  Don't have an account?<a href="/auth/employers/register"><strong> Sign up</strong></a>
                </div>
                <small class="text-xs">By signing up, you agree to our Terms of Use and Privacy Policy.</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>