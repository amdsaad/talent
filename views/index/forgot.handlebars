{{> _headerDark}}

<div class="container no-page-header">
	<div class="row justify-content-md-center">
		<div class="col-md-6">
			<form action="/auth/forgot" method="POST" class="py-5">
				<legend class="text-muted">Forgot Password</legend>
				<div class="form-group mt-3">
					<input type="email" name="email" autofocus class="form-control" placeholder="Email">
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-danger btn-lg" value="Reset Password">
				</div>
			</form>
		</div>
	</div>
</div>