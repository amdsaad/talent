{{> _header}}
<div class="container">
  <div class="row">
    {{#unless company}}
    <h4>please add company info to start posting Jobs</h4>
    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#compModal"> Add Company</button>
    {{/unless}}
  </div>
</div>



<!-- Modal Add Company -->
<div class="modal fade p-2" id="compModal" tabindex="-1" role="dialog" aria-labelledby="compModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg " role="document">
    <div class="modal-content p-5">
      <h4 class="text-center">Company Informaton</h4>
      <div class="p-3">
        <form method="post" action="/company">
          <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Company Name </label>
            <div class="col-sm-10">
              <input type="text" class="form-control" placeholder="Company Name" name="name" required />
            </div>
          </div>
          <div class="form-group row">
            <label for="logo" class="col-sm-2 col-form-label">Company Logo link</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" placeholder="http://website.com/logo..." name="logo" required />
            </div>
          </div>
          <div class="form-group row">
            <label for="specialisms" class="col-sm-2 col-form-label">Specialisms / Sectors </label>
            <div class="col-sm-10">
              <select class="custom-select d-block w-100" name="specialisms" required>
                <option value="">Please select.......</option>
                <option value="hospitality and restaurants">Hospitality & Restaurants</option>
                <option value="travel and tourism">Travel & Tourism</option>
                <option value="sales">Sales</option>
                <option value="secretarial‬">Secretarial‬</option>
                <option value="customer service">Customer Service</option>
                <option value="accounting">Accounting</option>
                <option value="Airlines and Aviation">Airlines & Aviation</option>
                <option value="architecture interior design">Architecture & Interior Design</option>
                <option value="art entertainment">Art & Entertainment</option>
                <option value="banking finance">Banking & Finance</option>
                <option value="business development">Business Development</option>
                <option value="engineering">Engineering</option>
                <option value="hr recruitment">HR & Recruitment</option>
                <option value="legal services">Legal Services</option>
                <option value="logistics distribution">Logistics & Distribution</option>
                <option value="marketing advertising">Marketing & Advertising</option>
                <option value="Media">Media</option>
                <option value="public relations">Public Relations</option>
                <option value="medical healthcare">Medical & Healthcare</option>
                <option value="oil gas energy">Oil, Gas & Energy</option>
                <option value="real estate">Real Estate</option>
                <option value="safety and security‬">Safety & Security</option>
                <option value="transportation">Transportation</option>
              </select>
            </div>

          </div>
          <div class="form-group row">
            <label for="description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
              <textarea id="editor" class="form-control form-control-rounded" placeholder="Company Description" name="description"></textarea>
            </div>
          </div>
          <input type="submit" class="btn btn-info btn-block mt-4" />
        </form>
      </div>
    </div>
  </div>
</div>