<div class="row">
  <div class="col s12 m8">
    <h3>{{story.title}}
      <small>{{{editIcon story.user.id user.id story.id false}}}</small>
    </h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
        {{{story.body}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{story.user.name}}</span>
        <img src="{{story.user.picture}}" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/stories/user/{{story.user.userID}}">More From {{story.user.name}}</a>
      </div>
    </div>
  </div>
</div>