{{> _headerDark}}

<div class="container no-page-header">
	<div class="row justify-content-md-center">
		<div class="col-md-6">
			<form action="/auth/candidate/activate/{{candidate.id}}" method="POST" class="py-5">
				<legend class="text-muted">Activate your account</legend>
				<div class="form-group mt-3">
					<input type="text" name="secretCode" autofocus class="form-control" placeholder="secret code">
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-danger btn-lg" value="Activate">
				</div>
			</form>
		</div>
	</div>
</div>