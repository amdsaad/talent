<div class="container mt-5">
  <div class="row justify-content-md-center">
    <div class="col">
      <form action="/posts" method="post">
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <input type="text" class="form-control" id="inputTitle" placeholder="Post Title" name="title">
        </div>
        <div class="form-group">
          <label for="inputStatus">Status</label>
          <select class="custom-select" name="status">
            <option value="public" selected>Public</option>
            <option value="private">Private</option>
            <option value="unpublished">Unpublished</option>
          </select>
        </div>
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck" name="allowComments" checked="checked">
            <label class="form-check-label" for="gridCheck">Allow Comments</label>
          </div>
        </div>
        <div class="form-group">
          <label for="inputImage">Post Image Link</label>
          <input type="text" class="form-control" id="inputImage" placeholder="Image link" name="image">
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Share Your Talent Post</label>
          <textarea name="body" class="form-control"  id="editor" rows="10"></textarea>
        </div>
        <input type="submit" value="Save" class="btn btn-primary">

      </form>
    </div>
    <div class="col col-lg-2"></div>
  </div>
</div>